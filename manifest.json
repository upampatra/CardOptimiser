{
  "manifest_version": 3,
  "name": "ReverzeMi",
  "version": "1.0",
  "description": "Recommends the best Indian credit card to use on checkout pages for maximum rewards and offers.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.swiggy.com/*",
    "*://*.zomato.com/*",
    "*://*.myntra.com/*",
    "*://*.makemytrip.com/*",
    "*://*.ajio.com/*",
    "*://*.tatacliq.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ReverzeMi"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.swiggy.com/*",
        "*://*.zomato.com/*",
        "*://*.myntra.com/*",
        "*://*.makemytrip.com/*",
        "*://*.ajio.com/*",
        "*://*.tatacliq.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}